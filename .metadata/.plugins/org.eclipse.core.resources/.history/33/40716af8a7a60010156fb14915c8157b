<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this match?")) {
            window.location.href = "MatchServlet?action=delete&matchId=" + id;
        }
    }

    /**
     * Client-side filtering function for match list items.
     * @param {string} filter - The status to filter by ('All', 'Upcoming', 'Completed', 'Running').
     * @param {HTMLElement} button - The button element that was clicked.
     */
    function filterMatches(filter, button) {
        // 1. Update active state of filter buttons
        const buttons = document.querySelectorAll('.filter-bar button');
        buttons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // 2. Iterate through all match list items (li) and show/hide based on filter
        const matchItems = document.querySelectorAll('#team_archive li');
        matchItems.forEach(item => {
            const matchStatus = item.getAttribute('data-status');
            
            if (filter === 'All' || matchStatus.toUpperCase() === filter.toUpperCase()) {
                item.style.display = 'flex'; // Show the match (using flex to align the content properly)
            } else {
                item.style.display = 'none'; // Hide the match
            }
        });
    }
</script>

