      <label>Team 1</label>
      <select name="team1" class="form-control" required>
        <% for (Team t : teams) {
             String selected = t.getTeamCode().equals(match.getTeam1Code()) ? "selected" : ""; %>
          <option value="<%= t.getTeamCode() %>" <%= selected %>>
            <%= t.getTeamName() %> (<%= t.getTeamCode() %>)
          </option>
        <% } %>
      </select>

      <label>Team 2</label>
      <select name="team2" class="form-control" required>
        <% for (Team t : teams) {
             String selected = t.getTeamCode().equals(match.getTeam2Code()) ? "selected" : ""; %>
          <option value="<%= t.getTeamCode() %>" <%= selected %>>
            <%= t.getTeamName() %> (<%= t.getTeamCode() %>)
          </option>
        <% } %>
      </select>

      <label>Venue</label>
      <input type="text" name="venue" class="form-control" required value="<%= match.getVenue() %>">

      <label>Match Date</label>
      <input type="date" name="matchDate" class="form-control" required value="<%= match.getMatchDate() %>">

      <label>Match Time</label>
      <input type="time" name="matchTime" class="form-control" required value="<%= match.getMatchTime() %>">

      <label>Status</label>
      <select name="status" class="form-control" required>
        <option value="Upcoming" <%= "Upcoming".equalsIgnoreCase(match.getStatus()) ? "selected" : "" %>>Upcoming</option>
        <option value="Completed" <%= "Completed".equalsIgnoreCase(match.getStatus()) ? "selected" : "" %>>Completed</option>
      </select>

      <label>Winner Team Code</label>
      <select name="winnerCode" class="form-control">
        <option value="">-- Select Winner --</option>
        <% for (Team t : teams) {
             String selected = t.getTeamCode().equals(match.getWinnerCode()) ? "selected" : ""; %>
          <option value="<%= t.getTeamCode() %>" <%= selected %>>
            <%= t.getTeamName() %> (<%= t.getTeamCode() %>)
          </option>
        <% } %>
      </select>

      <label>Team 1 Score</label>
      <input type="text" name="team1Score" class="form-control" value="<%= match.getTeam1Score() != null ? match.getTeam1Score() : "" %>" placeholder="e.g., 189/7 (20.0 ov)">

