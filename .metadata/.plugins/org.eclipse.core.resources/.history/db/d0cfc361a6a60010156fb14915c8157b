<div class="match-container">
    <%
        if (matches != null && !matches.isEmpty()) {
            for (Match m : matches) {
                Team t1 = teamDao.getTeamByCode(m.getTeam1Code());
                Team t2 = teamDao.getTeamByCode(m.getTeam2Code());
    %>
    <div class="match-card">
        <div class="team">
            <img src="<%= (t1 != null && t1.getLogoPath() != null) ? t1.getLogoPath() : "images/default-logo.png" %>" alt="Team 1">
            <div>
                <strong><%= (t1 != null) ? t1.getTeamName() : "Unknown" %></strong><br>
                <span class="score">
                    <%= "Completed".equalsIgnoreCase(m.getStatus()) ? (m.getTeam1Score() != null ? m.getTeam1Score() : "-") : "-" %>
                </span>
            </div>
        </div>

        <div class="vs">VS</div>

        <div class="team" style="justify-content: flex-end;">
            <div style="text-align: right;">
                <strong><%= (t2 != null) ? t2.getTeamName() : "Unknown" %></strong><br>
                <span class="score">
                    <%= "Completed".equalsIgnoreCase(m.getStatus()) ? (m.getTeam2Score() != null ? m.getTeam2Score() : "-") : "-" %>
                </span>
            </div>
            <img src="<%= (t2 != null && t2.getLogoPath() != null) ? t2.getLogoPath() : "images/default-logo.png" %>" alt="Team 2">
        </div>

        <div class="details">
            <p><strong>Venue:</strong> <%= m.getVenue() %></p>
            <p><strong>Date:</strong> <%= m.getMatchDate() %></p>
            <p><strong>Time:</strong> <%= m.getMatchTime() %></p>
            <p><span class="status <%= m.getStatus().equalsIgnoreCase("Completed") ? "completed" : "upcoming" %>">
                <%= m.getStatus() %>
            </span></p>
        </div>

        <div class="actions">
            <form action="MatchServlet" method="get" style="display:inline;">
                <input type="hidden" name="action" value="delete">
                <input type="hidden" name="matchId" value="<%= m.getMatchId() %>">
                <button class="btn btn-delete" onclick="return confirm('Delete this match?');">Delete</button>
            </form>
            <form action="updateMatch.jsp" method="get" style="display:inline;">
                <input type="hidden" name="matchId" value="<%= m.getMatchId() %>">
                <button class="btn btn-edit">Edit</button>
            </form>
        </div>
    </div>
    <% } } else { %>
